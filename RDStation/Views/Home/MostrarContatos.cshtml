@using RDStation.Models;
@model Contatos
@{ 
    int i = 0;
}

<div class="text-right">
    <button type="button" class="btn btn-danger" onclick="appCompany.fecharDiv()">
        <span>&times;</span>

    </button>
</div>
<h5 class="text-center mt-3">Contatos</h5>
<hr />

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead class="table-success text-center">
            <tr>
                <th>Nome</th>
                <th>Título</th>
                <th>Emails</th>
                <th>Telefones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contato contato in Model)
            {
                <tr>
                    <td>@contato.Nome</td>
                    <td>@contato.Titulo</td>
                    <td>
                        <ul class="pl-2">
                           @foreach(EmailContato email in contato.Emails)
                           {
                               <li>@email.Email</li>
                           }
                        </ul>                        
                    </td>
                    <td>
                        <ul class="pl-2">
                            @foreach(Telefone telefone in contato.Telefontes)
                            {
                                <li>@String.Concat(telefone.Tipo, " - ", telefone.NroTelefone)</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>   
}
else
{
    <div class="alert alert-danger">
        Não contém segmentos atrelados a esta Empresa
    </div>
}
