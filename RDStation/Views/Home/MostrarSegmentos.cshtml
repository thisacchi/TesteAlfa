@using RDStation.Models;
@model Segmentos


<div class="text-right">
    <button type="button" class="btn btn-danger" onclick="appCompany.fecharDiv()">
        <span>&times;</span>

    </button>
</div>
<h5 class="text-center mt-3">Segmentos</h5>
<hr />

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead class="table-success text-center">
            <tr>
                <th>Nome</th>
                <th>Data da Criação</th>
                <th>Data da Atualização</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Segmento segmento in Model)
            {
                <tr>
                    <td>@segmento.Nome</td>
                    <td>@segmento.DataCriacao.ToShortDateString()</td>
                    <td>@segmento.DataAtualizacao.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        Não contém segmentos atrelados a esta Empresa
    </div>
}